<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ticket_assign_wizard_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.assign.wizard.form</field>
        <field name="model">ft.helpdesk.ticket.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Tickets">
                <group>
                    <field name="ticket_ids" invisible="1"/>
                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                    <field name="team_id"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object"
                            string="Assign" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
