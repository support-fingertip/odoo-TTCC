<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ticket_close_wizard_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.close.wizard.form</field>
        <field name="model">ft.helpdesk.ticket.close.wizard</field>
        <field name="arch" type="xml">
            <form string="Close Ticket">
                <group>
                    <field name="ticket_id" invisible="1"/>
                    <field name="ticket_ids" invisible="1"/>
                    <field name="is_cancel" invisible="1"/>
                    <field name="close_reason_id"
                           options="{'no_create': True, 'no_open': True}"/>
                    <field name="resolution_summary"
                           placeholder="Describe the resolution..."
                           invisible="is_cancel"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object"
                            string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
