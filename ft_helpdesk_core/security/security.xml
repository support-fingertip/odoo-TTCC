<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_ft_helpdesk" model="ir.module.category">
        <field name="name">FT Helpdesk</field>
        <field name="description">Helpdesk and Support Ticket Management</field>
        <field name="sequence">30</field>
    </record>

    <!-- Groups -->
    <record id="group_ft_helpdesk_agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_ft_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Work tickets for allowed teams</field>
    </record>

    <record id="group_ft_helpdesk_team_lead" model="res.groups">
        <field name="name">Team Lead</field>
        <field name="category_id" ref="module_category_ft_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('group_ft_helpdesk_agent'))]"/>
        <field name="comment">See all team tickets, override assignments, manage team settings</field>
    </record>

    <record id="group_ft_helpdesk_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_ft_helpdesk"/>
        <field name="implied_ids" eval="[(4, ref('group_ft_helpdesk_team_lead'))]"/>
        <field name="comment">Full configuration access to helpdesk</field>
    </record>
</odoo>
