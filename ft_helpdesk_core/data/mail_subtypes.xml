<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Internal Note Subtype (NEVER shown on portal) -->
        <record id="mt_ticket_internal_note" model="mail.message.subtype">
            <field name="name">Internal Note</field>
            <field name="res_model">ft.helpdesk.ticket</field>
            <field name="internal" eval="True"/>
            <field name="description">Internal note on helpdesk ticket (not visible to customer)</field>
        </record>

        <!-- Public Reply Subtype -->
        <record id="mt_ticket_public_reply" model="mail.message.subtype">
            <field name="name">Public Reply</field>
            <field name="res_model">ft.helpdesk.ticket</field>
            <field name="internal" eval="False"/>
            <field name="description">Public reply visible to customer</field>
        </record>

        <!-- State Change Subtype -->
        <record id="mt_ticket_state_change" model="mail.message.subtype">
            <field name="name">Status Changed</field>
            <field name="res_model">ft.helpdesk.ticket</field>
            <field name="internal" eval="False"/>
            <field name="description">Ticket status has changed</field>
        </record>

        <!-- New Ticket Subtype -->
        <record id="mt_ticket_new" model="mail.message.subtype">
            <field name="name">New Ticket</field>
            <field name="res_model">ft.helpdesk.ticket</field>
            <field name="internal" eval="False"/>
            <field name="default" eval="True"/>
            <field name="description">A new ticket has been created</field>
        </record>
    </data>
</odoo>
