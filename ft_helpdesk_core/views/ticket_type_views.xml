<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ticket_type_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.type.tree</field>
        <field name="model">ft.helpdesk.ticket.type</field>
        <field name="arch" type="xml">
            <list string="Ticket Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="icon"/>
                <field name="portal_visible"/>
                <field name="fieldset_id"/>
                <field name="default_team_id"/>
            </list>
        </field>
    </record>

    <record id="view_ticket_type_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.type.form</field>
        <field name="model">ft.helpdesk.ticket.type</field>
        <field name="arch" type="xml">
            <form string="Ticket Type">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Type Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="icon"/>
                            <field name="portal_visible"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="default_team_id"/>
                            <field name="fieldset_id"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ticket_type_list" model="ir.actions.act_window">
        <field name="name">Ticket Types</field>
        <field name="res_model">ft.helpdesk.ticket.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
