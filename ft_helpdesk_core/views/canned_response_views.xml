<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_canned_response_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.canned.response.tree</field>
        <field name="model">ft.helpdesk.canned.response</field>
        <field name="arch" type="xml">
            <list string="Canned Responses">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="shortcut"/>
                <field name="category"/>
                <field name="team_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_canned_response_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.canned.response.form</field>
        <field name="model">ft.helpdesk.canned.response</field>
        <field name="arch" type="xml">
            <form string="Canned Response">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Response Title..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="shortcut" placeholder="/shortcut"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="team_ids" widget="many2many_tags"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group string="Response Body">
                        <field name="body" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_canned_response_list" model="ir.actions.act_window">
        <field name="name">Canned Responses</field>
        <field name="res_model">ft.helpdesk.canned.response</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
