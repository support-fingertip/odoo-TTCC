<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ===== TICKET TREE VIEW ===== -->
    <record id="view_ticket_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.tree</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <list string="Tickets" multi_edit="1" sample="1"
                  decoration-danger="priority == '3'"
                  decoration-warning="priority == '2'"
                  decoration-muted="state in ('closed', 'cancelled')">
                <field name="ticket_no" optional="show"/>
                <field name="name"/>
                <field name="customer_id" widget="many2one_avatar"/>
                <field name="team_id" optional="show"/>
                <field name="assigned_user_id" widget="many2one_avatar_user" optional="show"/>
                <field name="category_id" optional="show"/>
                <field name="type_id" optional="hide"/>
                <field name="priority" widget="priority" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'open'"
                       decoration-warning="state in ('pending_customer', 'pending_internal')"
                       decoration-success="state in ('resolved', 'closed')"
                       decoration-danger="state == 'cancelled'"
                       decoration-muted="state == 'new'"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" optional="hide"/>
                <field name="create_date" string="Created" optional="show"/>
                <field name="first_response_at" optional="hide"/>
                <field name="is_escalated" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ===== TICKET KANBAN VIEW ===== -->
    <record id="view_ticket_kanban" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.kanban</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column"
                    sample="1" quick_create="false">
                <field name="ticket_no"/>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="assigned_user_id"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="tag_ids"/>
                <field name="team_id"/>
                <field name="is_escalated"/>
                <field name="create_date"/>
                <field name="color"/>
                <progressbar field="priority" colors='{"0": "muted", "1": "info", "2": "warning", "3": "danger"}'/>
                <templates>
                    <t t-name="card" class="oe_kanban_global_click">
                        <div class="o_kanban_record_top mb-0">
                            <div class="o_kanban_record_headings">
                                <strong class="o_kanban_record_title">
                                    <field name="ticket_no" class="text-muted me-1"/>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_top_right">
                                <field name="priority" widget="priority"/>
                            </div>
                        </div>
                        <div class="o_kanban_record_body">
                            <div class="d-flex align-items-center mb-1">
                                <i class="fa fa-user text-muted me-1" title="Customer"/>
                                <field name="customer_id"/>
                            </div>
                            <div t-if="record.team_id.value" class="d-flex align-items-center mb-1">
                                <i class="fa fa-users text-muted me-1" title="Team"/>
                                <field name="team_id"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                        <div class="o_kanban_record_bottom">
                            <div class="oe_kanban_bottom_left">
                                <field name="activity_ids" widget="kanban_activity"/>
                                <t t-if="record.is_escalated.raw_value">
                                    <span class="badge text-bg-danger">
                                        <i class="fa fa-arrow-up"/> Escalated
                                    </span>
                                </t>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ===== TICKET SEARCH VIEW ===== -->
    <record id="view_ticket_search" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.search</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="name" string="Subject / Ticket #" filter_domain="['|', ('name', 'ilike', self), ('ticket_no', 'ilike', self)]"/>
                <field name="customer_id"/>
                <field name="assigned_user_id"/>
                <field name="team_id"/>
                <field name="category_id"/>
                <field name="type_id"/>
                <field name="tag_ids"/>
                <separator/>
                <!-- Quick Filters -->
                <filter string="My Tickets" name="my_tickets" domain="[('assigned_user_id', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('assigned_user_id', '=', False)]"/>
                <filter string="Escalated" name="escalated" domain="[('is_escalated', '=', True)]"/>
                <separator/>
                <filter string="New" name="state_new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="state_open" domain="[('state', '=', 'open')]"/>
                <filter string="Pending Customer" name="state_pending_customer" domain="[('state', '=', 'pending_customer')]"/>
                <filter string="Pending Internal" name="state_pending_internal" domain="[('state', '=', 'pending_internal')]"/>
                <filter string="Resolved" name="state_resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Closed" name="state_closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Open (Active)" name="active_tickets"
                        domain="[('state', 'not in', ('closed', 'cancelled'))]"/>
                <separator/>
                <filter string="Urgent" name="priority_urgent" domain="[('priority', '=', '3')]"/>
                <filter string="High Priority" name="priority_high" domain="[('priority', 'in', ('2', '3'))]"/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <separator/>
                <filter string="Created Today" name="created_today"
                        domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Created This Week" name="created_week"
                        domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Created This Month" name="created_month"
                        domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                    <filter string="Assignee" name="group_assignee" context="{'group_by': 'assigned_user_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'type_id'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'channel'}"/>
                    <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date:month'}"/>
                    <filter string="Customer" name="group_customer" context="{'group_by': 'customer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===== TICKET FORM VIEW ===== -->
    <record id="view_ticket_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.form</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Helpdesk Ticket">
                <header>
                    <button name="action_assign_to_me" type="object" string="Assign to Me"
                            class="btn-primary"
                            invisible="assigned_user_id == uid"/>
                    <button name="action_set_state_open" type="object" string="Start Working"
                            class="btn-primary" invisible="state != 'new'"/>
                    <button name="action_set_state_pending_customer" type="object"
                            string="Pending Customer" class="btn-secondary"
                            invisible="state not in ('open', 'pending_internal')"/>
                    <button name="action_set_state_pending_internal" type="object"
                            string="Pending Internal" class="btn-secondary"
                            invisible="state not in ('open', 'pending_customer')"/>
                    <button name="action_request_info" type="object"
                            string="Request Info" class="btn-secondary"
                            invisible="state not in ('new', 'open')"/>
                    <button name="action_set_state_resolved" type="object"
                            string="Resolve" class="btn-success"
                            invisible="state not in ('open', 'pending_customer', 'pending_internal')"/>
                    <button name="action_open_close_wizard" type="object"
                            string="Close" class="btn-success"
                            invisible="state not in ('resolved',)"/>
                    <button name="action_open_cancel_wizard" type="object"
                            string="Cancel" class="btn-danger"
                            invisible="state in ('closed', 'cancelled')"/>
                    <button name="action_reopen" type="object"
                            string="Reopen" class="btn-warning"
                            invisible="state not in ('resolved', 'closed', 'cancelled')"/>
                    <button name="action_escalate" type="object"
                            string="Escalate" class="btn-warning"
                            invisible="state in ('closed', 'cancelled') or is_escalated == True"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,open,pending_customer,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_activities" type="object" class="oe_stat_button" icon="fa-clock-o"
                                invisible="1">
                            <field name="activity_ids" string="Activities" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Escalated" bg_color="text-bg-danger"
                            invisible="not is_escalated"/>
                    <widget name="web_ribbon" title="Closed" bg_color="text-bg-success"
                            invisible="state != 'closed'"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-secondary"
                            invisible="state != 'cancelled'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="ticket_no" readonly="1" class="text-muted me-2"
                                   style="font-size: 0.8em;"/>
                            <field name="name" placeholder="Ticket Subject..."
                                   class="text-break"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" widget="res_partner_many2one"
                                   context="{'show_email': True}"/>
                            <field name="customer_email" invisible="not customer_email"/>
                            <field name="customer_phone" invisible="not customer_phone"/>
                            <field name="team_id"/>
                            <field name="assigned_user_id" widget="many2one_avatar_user"/>
                        </group>
                        <group>
                            <field name="priority" widget="priority"/>
                            <field name="channel"/>
                            <field name="type_id"/>
                            <field name="category_id"/>
                            <field name="subcategory_id"
                                   invisible="not category_id"/>
                            <field name="due_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Conversation" name="conversation">
                            <field name="description" placeholder="Describe the issue..."
                                   invisible="state != 'new' and not description"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                        <page string="Details" name="details">
                            <group>
                                <group string="Classification">
                                    <field name="product_id"/>
                                    <field name="tag_ids" widget="many2many_tags"
                                           options="{'color_field': 'color'}"/>
                                </group>
                                <group string="Escalation" invisible="not is_escalated">
                                    <field name="is_escalated"/>
                                    <field name="escalation_level"/>
                                </group>
                            </group>
                        </page>
                        <page string="Dynamic Fields" name="dynamic_fields"
                              invisible="not fieldset_id">
                            <group>
                                <field name="fieldset_id" invisible="1"/>
                                <field name="dynamic_values" widget="json"/>
                            </group>
                        </page>
                        <page string="Resolution" name="resolution">
                            <group>
                                <group string="Resolution Details">
                                    <field name="resolution_summary"
                                           placeholder="Describe how the issue was resolved..."/>
                                    <field name="close_reason_id"
                                           invisible="state not in ('closed', 'cancelled')"/>
                                </group>
                                <group string="Timestamps">
                                    <field name="create_date" string="Created"/>
                                    <field name="first_response_at"/>
                                    <field name="resolved_at"/>
                                    <field name="closed_at"/>
                                    <field name="cancelled_at"
                                           invisible="state != 'cancelled'"/>
                                    <field name="last_customer_reply_at"/>
                                    <field name="last_agent_reply_at"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ===== TICKET ACTION ===== -->
    <record id="action_ticket_list" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">ft.helpdesk.ticket</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_ticket_search"/>
        <field name="context">{'search_default_active_tickets': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets yet!
            </p>
            <p>
                Start by creating a new support ticket or wait for customers to submit tickets via the portal.
            </p>
        </field>
    </record>

    <!-- My Tickets Action -->
    <record id="action_my_tickets" model="ir.actions.act_window">
        <field name="name">My Tickets</field>
        <field name="res_model">ft.helpdesk.ticket</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_ticket_search"/>
        <field name="context">{'search_default_my_tickets': 1, 'search_default_active_tickets': 1}</field>
    </record>

    <!-- Unassigned Tickets Action -->
    <record id="action_unassigned_tickets" model="ir.actions.act_window">
        <field name="name">Unassigned Tickets</field>
        <field name="res_model">ft.helpdesk.ticket</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_ticket_search"/>
        <field name="context">{'search_default_unassigned': 1, 'search_default_active_tickets': 1}</field>
    </record>
</odoo>
