<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ── Tree / List View ─────────────────────────────────────────────────── -->
    <record id="view_ft_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.tree</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <list string="Tickets" decoration-muted="state == 'closed'" decoration-danger="priority == '3'">
                <field name="ticket_no" optional="show"/>
                <field name="name"/>
                <field name="project_id" optional="show"/>
                <field name="customer_id" optional="show"/>
                <field name="assigned_user_id" optional="show"/>
                <field name="priority" widget="priority" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'new'"
                       decoration-primary="state == 'open'"
                       decoration-warning="state == 'pending_customer'"
                       decoration-success="state == 'resolved'"
                       decoration-muted="state in ('closed', 'cancelled')"/>
            </list>
        </field>
    </record>

    <!-- ── Search View ──────────────────────────────────────────────────────── -->
    <record id="view_ft_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.search</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Tickets">
                <field name="name" string="Subject"/>
                <field name="ticket_no"/>
                <field name="project_id"/>
                <field name="customer_id"/>
                <field name="assigned_user_id"/>
                <!-- Filters -->
                <filter name="my_tickets"
                        string="My Tickets"
                        domain="[('assigned_user_id', '=', uid)]"/>
                <filter name="my_projects"
                        string="My Projects"
                        domain="['|', ('project_id.user_id', '=', uid), ('project_id.member_ids', 'in', [uid])]"/>
                <separator/>
                <filter name="state_new"      string="New"       domain="[('state', '=', 'new')]"/>
                <filter name="state_open"     string="In Progress" domain="[('state', '=', 'open')]"/>
                <filter name="state_resolved" string="Resolved"  domain="[('state', '=', 'resolved')]"/>
                <!-- Group by -->
                <group expand="0" string="Group By">
                    <filter name="group_project"  string="Project"  context="{'group_by': 'project_id'}"/>
                    <filter name="group_state"    string="Status"   context="{'group_by': 'state'}"/>
                    <filter name="group_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    <filter name="group_assigned" string="Assigned To" context="{'group_by': 'assigned_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ── Form View ────────────────────────────────────────────────────────── -->
    <record id="view_ft_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.form</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <!-- Status bar -->
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,open,resolved,closed"
                           options="{'clickable': '1'}"/>
                </header>

                <sheet>
                    <!-- Ticket number badge -->
                    <div class="oe_title">
                        <span class="o_field_widget o_field_char text-muted small"
                              style="font-size:0.85rem;">
                            <field name="ticket_no" readonly="1"/>
                        </span>
                        <h1>
                            <field name="name" placeholder="Ticket subject…" required="1"/>
                        </h1>
                    </div>

                    <group>
                        <!-- Left column -->
                        <group string="General">
                            <!--
                                Project field – domain restricts the dropdown to projects
                                where the current user is the manager (user_id) OR a member
                                (member_ids). The 'uid' keyword is available in all Odoo
                                view domains and always resolves to the logged-in user's id.
                            -->
                            <field name="project_id"
                                   domain="['|', ('user_id', '=', uid), ('member_ids', 'in', [uid])]"
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Select your project…"/>
                            <field name="customer_id"/>
                            <field name="assigned_user_id"/>
                        </group>

                        <!-- Right column -->
                        <group string="Classification">
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>

                    <!-- Description -->
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html"
                                   placeholder="Describe the issue…"/>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ── Kanban View ──────────────────────────────────────────────────────── -->
    <record id="view_ft_helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">ft.helpdesk.ticket.kanban</field>
        <field name="model">ft.helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="ticket_no"/>
                <field name="project_id"/>
                <field name="assigned_user_id"/>
                <field name="priority"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="priority" widget="priority"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <t t-if="record.project_id.value">
                                    <span class="badge text-bg-secondary me-1">
                                        <i class="fa fa-folder-o me-1"/>
                                        <t t-esc="record.project_id.value"/>
                                    </span>
                                </t>
                                <span class="text-muted small">
                                    <t t-esc="record.ticket_no.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- ── Window Actions ───────────────────────────────────────────────────── -->
    <record id="action_ft_helpdesk_ticket" model="ir.actions.act_window">
        <field name="name">All Tickets</field>
        <field name="res_model">ft.helpdesk.ticket</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_ft_helpdesk_ticket_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets yet — create the first one!
            </p>
        </field>
    </record>

    <record id="action_ft_helpdesk_ticket_my" model="ir.actions.act_window">
        <field name="name">My Tickets</field>
        <field name="res_model">ft.helpdesk.ticket</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('assigned_user_id', '=', uid)]</field>
        <field name="search_view_id" ref="view_ft_helpdesk_ticket_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tickets assigned to you yet.
            </p>
        </field>
    </record>

</odoo>

