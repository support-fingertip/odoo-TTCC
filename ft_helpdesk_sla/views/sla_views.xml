<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SLA Policy Tree -->
    <record id="view_sla_policy_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.sla.policy.tree</field>
        <field name="model">ft.helpdesk.sla.policy</field>
        <field name="arch" type="xml">
            <list string="SLA Policies">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="team_id"/>
                <field name="priority"/>
                <field name="first_response_hours"/>
                <field name="resolution_hours"/>
                <field name="business_hours_id"/>
                <field name="escalate_on_breach"/>
            </list>
        </field>
    </record>

    <!-- SLA Policy Form -->
    <record id="view_sla_policy_form" model="ir.ui.view">
        <field name="name">ft.helpdesk.sla.policy.form</field>
        <field name="model">ft.helpdesk.sla.policy</field>
        <field name="arch" type="xml">
            <form string="SLA Policy">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="SLA Policy Name..."/></h1>
                    </div>
                    <group>
                        <group string="Matching Criteria">
                            <field name="team_id"/>
                            <field name="priority"/>
                            <field name="category_id"/>
                            <field name="type_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="SLA Targets">
                            <field name="first_response_hours" widget="float_time"/>
                            <field name="resolution_hours" widget="float_time"/>
                            <field name="business_hours_id"/>
                        </group>
                    </group>
                    <group string="Escalation">
                        <field name="escalate_on_breach"/>
                        <field name="notify_user_ids" widget="many2many_tags"
                               options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <field name="description" placeholder="Description..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SLA Status Tree -->
    <record id="view_sla_status_tree" model="ir.ui.view">
        <field name="name">ft.helpdesk.sla.status.tree</field>
        <field name="model">ft.helpdesk.sla.status</field>
        <field name="arch" type="xml">
            <list string="SLA Status" create="false"
                  decoration-danger="sla_state == 'breached'"
                  decoration-warning="sla_state == 'at_risk'"
                  decoration-success="sla_state == 'completed'">
                <field name="ticket_id"/>
                <field name="policy_id"/>
                <field name="first_response_deadline"/>
                <field name="first_response_done_at"/>
                <field name="first_response_breached"/>
                <field name="resolution_deadline"/>
                <field name="resolution_done_at"/>
                <field name="resolution_breached"/>
                <field name="sla_state" widget="badge"
                       decoration-success="sla_state == 'completed'"
                       decoration-info="sla_state == 'on_track'"
                       decoration-warning="sla_state == 'at_risk'"
                       decoration-danger="sla_state == 'breached'"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sla_policy" model="ir.actions.act_window">
        <field name="name">SLA Policies</field>
        <field name="res_model">ft.helpdesk.sla.policy</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_sla_status" model="ir.actions.act_window">
        <field name="name">SLA Status</field>
        <field name="res_model">ft.helpdesk.sla.status</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
